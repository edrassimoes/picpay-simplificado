			"name": "GET WALLET BY USER ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Carteira retornada com sucesso\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response deve conter dados da carteira\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property(\"id\");",
							"    pm.expect(json).to.have.property(\"balance\");",
							"});",
							"",
							"pm.test(\"Balance deve ser um número\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.balance).to.be.a(\"number\");",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
