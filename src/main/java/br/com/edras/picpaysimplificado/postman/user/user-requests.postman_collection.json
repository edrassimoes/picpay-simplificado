					"script": {
						"exec": [
							"pm.test(\"Deve retornar 409 ao tentar remover usuário com transações\", function () {",
							"    pm.response.to.have.status(409);",
							"});",
							"",
							"pm.test(\"Mensagem de erro deve indicar usuário com transações\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.message).to.eql(\"Usuário não pode ser removido pois possui transações vinculadas\");",
							"});",
							"",
							"pm.test(\"Response deve conter status e timestamp\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property(\"status\");",
							"    pm.expect(json).to.have.property(\"timestamp\");",
